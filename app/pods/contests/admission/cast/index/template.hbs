<div class="pt-5">
  {{#if (not admission_contests.length)}}
    {{contest-view/empty-contest-screen}}
  {{/if}}
  <div class="row">
    {{#each admission_contests as |contest|}}
      <div class="col-12 col-md-4 mb-4">
        <ContestCard
          class="mb-5"
          @contest={{contest.contest}}
          @showTimer=true >
          <LinkTo
            class="button-solid button-orange mt-4 mb-2 mx-auto"
            @route="contests.contest"
            @model={{contest.contest.id}}>
            View Contest  
          </LinkTo>
        </ContestCard>
      </div>
    {{/each}}
  </div>
</div>
