{{#if (not hiring_contests.length)}}
  {{contest-view/empty-contest-screen}}
{{/if}}
<div class="row">
  {{#each hiring_contests as |hiring_contest|}}
  <div class="col-12 col-md-4">
    <ContestCard class="mb-5"
      @contest={{hiring_contest.contest}}
      @showTimer=true>
      <LinkTo
        class="button-solid button-orange mt-4 mb-2 mx-auto"
        @route="contests.contest"
        @model={{hiring_contest.contest.id}}>
        View Contest  
      </LinkTo>
    </ContestCard>
  </div>
  {{/each}}
</div>
