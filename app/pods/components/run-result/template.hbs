{{#unless (eq judgeResult.result "success")}}
  <div class="{{unless fullScreen "border-card mb-5"}} p-0">
    {{#if (eq judgeResult.result "compile_error")}}
      {{run-result/error-run-message}}
    {{else if (not (eq judgeResult.result "success"))}}
      {{run-result/judgement-delay-run-message}}
    {{/if}}
  </div>
{{/unless}}

<div class="{{unless fullScreen "border-card"}} p-5 bg-grey">
  {{#if (eq judgeResult.result "compile_error")}}
    <h2>Compilation Error</h2>
    <div class="font-sm my-2">Check the compiler output, fix the error and try again.</div>
  {{else if (eq judgeResult.result "success")}}
    <h2>Compiled Successfully</h2>
  {{else}}
    <h2>Submission not judged, try again later</h2>
  {{/if}}

  <div class="divider-h my-4"></div>
  <div class="font-sm bold">Compile Message</div>
  <div class="bg-white p-4 mt-3">
    <pre class="p-2 font-sm">{{output}}</pre>
  </div>
</div>