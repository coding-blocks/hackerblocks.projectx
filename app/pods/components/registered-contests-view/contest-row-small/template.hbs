<div class="hover-grey py-4 px-sm-5 px-4">
  <div class="d-flex align-items-center">
    <div class="mr-3 d-inline-block">
      <div class="border-card py-3 px-4 t-align-c orange border-orange">
        <div class="extra-bold large-font">{{moment-format registration.contest.start_time 'DD'}}</div>
        <div class="font-sm bold">{{moment-format registration.contest.start_time 'MMM'}}</div>
      </div>
    </div>
    <div class="d-inline-block">
      <h5 class="bold mb-1">{{registration.contest.name}}</h5>
      <div>{{registration.contest.contestTypeDisplay}}</div>
    </div>
  </div>
  <div class="row no-gutters justify-content-between align-items-center mt-3">
    <div><a href="#">Remind Me</a></div>
    <h6 class="mt-2">
      <a href="#" class="orange">View Contest<i class="fas fa-arrow-right ml-2"></i></a></h6>
    <LinkTo 
      @route='contests.contest'
      @model={{registration.contest.id}}>
      View Contest<i class="fas fa-arrow-right ml-2"></i>
    </LinkTo>
  </div>
</div>

<div class="divider-h px-sm-5 px-4"></div>