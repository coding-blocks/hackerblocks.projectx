<div class="border-card bg-gradient-purple white">
  <div class="row align-items-center justify-content-between">

    <div class="row no-gutters col-md-7 col-12">
      <div class="col-12 col-lg-4 font-lg extra-bold">
        {{content.name}}
      </div>
      <div class="col-lg-8 col-12 my-lg-0 my-4">
        <ul class="divided-list my-0">
          <li class="px-3">
            <div class="list-heading font-mds extra-bold mb-2 yellow">{{content.difficultyString}}</div>
            <div class="list-data font-mds">Difficulty</div>
          </li>
          <li class="px-3">
            <div class="list-heading font-mds extra-bold mb-2 yellow">{{content.stats.submission-count}}</div>
            <div class="list-data font-mds">Submissions</div>
          </li>
          <li class="px-3">
            <div class="list-heading font-mds extra-bold mb-2 yellow">100</div>
            <div class="list-data font-mds">Max Points</div>
          </li>
        </ul>
      </div>
    </div>
    {{#if content.topSubmission}}
      <div class="col-xl-3 col-lg-4 col-md-5 col-12">
        {{#if (eq content.type "problem")}}
          <h4 class="d-inline-block mr-2">Status:</h4>
          <h4 class="yellow d-inline-block">{{content.topSubmission.resultParams.message}}</h4>
        {{else}}
        {{/if}}
        <div class="row mx-0 justify-content-start">
          <div class="col-6 px-0">
            <progress value="{{content.topSubmission.score}}" max="100" class="mt-3 d-inline-block"></progress>
          </div>
          <div class="col-6 px-0">
            <h5 class="d-inline-block mt-2 pl-3">{{content.topSubmission.score}}/100 Points</h5>
          </div>
        </div>
      </div>
    {{else}}
      <div class="col-xl-3 col-lg-4 col-md-5 col-12">
    {{#if (eq content.type "problem")}}
        <h4 class="d-inline-block mr-2">Status:</h4>
        <h4 class="yellow d-inline-block">Not Attempted</h4>
    {{else}}
    {{/if}}
        <div class="row mx-0 justify-content-start">
          <div class="col-6 px-0">
            <progress value="0" max="100" class="mt-3 d-inline-block"></progress>
          </div>
          <div class="col-6 px-0">
            <h5 class="d-inline-block mt-2 pl-3">0/100 Points</h5>
          </div>
        </div>
      </div>        
    {{/if}}
  </div>
</div>
