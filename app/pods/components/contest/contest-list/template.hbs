<WAsync @task={{fetchContestsTask}} @loadingComponent={{component 'loading-component' }} @fireTrigger={{taskTrigger}} as
  |college_contests isError|>
  <div class="row">
    {{#each college_contests as |college_contest|}}
    <div class="col-12 col-md-4">
      <ContestCard class="mb-5" @contest={{college_contest.contest}} @showTimer=true>
        {{#link-to "contests.contest" college_contest.contest.id class="button-solid button-orange mt-3 mb-2 mx-auto"}}
        Solve Challenge
        {{/link-to}}
      </ContestCard>
    </div>
    {{/each}}
  </div>
  <PaginationPill @pagination={{college_contests.meta.pagination}} @setOffset={{action 'setOffset' }} />
</WAsync>